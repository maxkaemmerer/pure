{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@kaumlaut/pure/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}